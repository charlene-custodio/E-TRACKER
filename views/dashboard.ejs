<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>E-Tracker Dashboard</title>
  <link rel="stylesheet" href="css/dashboard.css" />
  <link rel="stylesheet" href="css/modal.css" />
</head>
<body>

   <header class="navbar">
    <div class="nav-title">
      <img src="images/logo.png" alt="Logo" class="logo"/>
      <div class="app-name">
        <h2>E-Tracker</h2>
        <p>Anecdotal Report & Student Record Tracker</p>
      </div>
    </div>
    <div class="nav-right">
      <div class="notification">
        <span class="icon">üîî</span>
        <span class="notif-count">12</span>
      </div>
      <div class="admin-info">
        <span><%= user.username || "User" %></span>
        <span><%= user.role || "User" %></span>
      </div>
    </div>
  </header>

  <!-- Main Container -->
  <div class="container">
    <!-- Sidebar  -->
   <aside class="sidebar">
  <a href="/dashboard" class="sidebar-link active">
    <span class="icon">‚óº‚óº</span>
    <span>Dashboard</span>
  </a>
  <a href="/reminders" class="sidebar-link">
    <span class="icon">‚óº‚óº</span>
    <span>Reminders</span>
  </a>
  <a href="archives.html" class="sidebar-link">
    <span class="icon">‚óº‚óº</span>
    <span>Archives</span>
  </a>
  <a href="settings.html" class="sidebar-link">
    <span class="icon">‚óº‚óº</span>
    <span>Settings</span>
  </a>
  <a href="/logout" class="sidebar-link">
  <span class="icon">‚óº‚óº</span>
  <span>Logout</span>
</a>

</aside>
</aside>

<main class="main-content">
  <!-- Dashboard Title + Top Actions -->
  <div class="dashboard-header">
    <h1>E-SCHOLARS Portal | <%= user.full_name %></h1>

    <div class="top-controls">
      <input type="text" placeholder="Search" class="search-input" id="studentSearch" />
      <a href="/add_student" class="add-btn">+ Add New Student</a>
    </div>
  </div>

    <!-- Students Card Grid -->
<div class="students-grid">
  <% students.forEach(function(student) { %>
    <div class="student-card">
      <img src="/uploads/<%= student.id_picture %>" alt="Student Avatar" class="student-avatar" />
      <div class="student-info">
        <h3><%= student.name %></h3>
        <p>Grade <%= student.grade_level %> Student</p>
        <p><%= student.sex %></p>
      </div>
      <div class="card-actions">
        <a href="#" class="btn-icon view-student-btn" data-id="<%= student.id %>" title="View Student">üëÅÔ∏è</a>
        <a href="/students/<%= student.id %>/anecdotal-reports" class="btn-icon" title="View Anecdotal Reports">üîé</a>
        <!-- Add Anecdotal Report button for each student -->
            <button class="add-anecdotal-btn" 
              data-student-id="<%= student.id %>">
            + Add Anecdotal Report
      </button>
      </div>
    </div>
  <% }); %>
</div>

<!-- Modal (at end of body, NOT inside students grid) -->
<div id="anecdotalReportModal" class="modal" style="display:none;">
  <div class="modal-content">
    <h2>Add Anecdotal Report & Sessions</h2>
    <form id="anecdotalReportForm" autocomplete="off">
      <div class="input-group">
        <label>Report Date</label>
        <input type="date" name="report_date" required />
      </div>
      <div class="input-group">
        <label>Learner Difficulties</label>
        <textarea name="learner_difficulties" required></textarea>
      </div>
      <div class="input-group">
        <label>Intervention</label>
        <textarea name="intervention" required></textarea>
      </div>
      <div class="input-group">
        <label>Result</label>
        <textarea name="result" required></textarea>
      </div>
      <hr />
      <div id="sessionsContainer">
        <h3>Anecdotal Sessions</h3>
        <!-- Session entries will be appended here -->
      </div>
      <button type="button" id="addSessionBtn" class="secondary-btn">+ Add Session</button>
      <div class="modal-actions">
        <button type="submit" class="primary-btn">Submit Report & Sessions</button>
        <button type="button" class="secondary-btn" id="closeAnecdotalReportModal">Cancel</button>
      </div>
    </form>
  </div>
</div>

    </div>  
  </div>
</main>
</div>
</main>
  </div>

  <form action="/logout" method="GET">
    <button type="submit">Logout</button>
  </form>
<div id="viewStudentModal" class="modal" style="display:none;">
  <div class="modal-content">
  </div>
</div>

<script src="/js/anecdotalReport.js"></script>
<script src="/js/viewStudent.js"></script>
<script >
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('studentSearch');
  const studentCards = document.querySelectorAll('.student-card');

  searchInput.addEventListener('input', function() {
    const query = this.value.trim().toLowerCase();
    studentCards.forEach(card => {
      // You can expand this to search more fields
      const name = card.querySelector('h3').textContent.toLowerCase();
      const grade = card.querySelector('.student-info p').textContent.toLowerCase();
      // Combine fields if you want broader matching
      const combined = name + ' ' + grade;
      if (combined.includes(query)) {
        card.style.display = '';
      } else {
        card.style.display = 'none';
      }
    });
  });
});
</script>
</html>




